<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
		<Configurations>Debug;Release;NugetPackage</Configurations>
	</PropertyGroup>

	<ItemGroup>
		<None Include="obj/$(Configuration)/**/generated/**/*.cs" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="TylerCLI" Version="$(Version)" Condition="'$(Configuration)' == 'NugetPackage'" />
		<PackageReference Include="TylerCLI.Extensions.DependencyInjection" Version="$(Version)" Condition="'$(Configuration)' == 'NugetPackage'" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\TylerCLI\TylerCLI.csproj" OutputItemType="Analyzer" Condition="'$(Configuration)' != 'NugetPackage'" />
		<ProjectReference Include="..\TylerCLI.Extensions.DependencyInjection\TylerCLI.Extensions.DependencyInjection.csproj" OutputItemType="Analyzer" Condition="'$(Configuration)' != 'NugetPackage'" />
	</ItemGroup>

	<Import Project="..\TylerCLI.Extensions.DependencyInjection\TylerCLI.Extensions.DependencyInjection.props" Condition="'$(Configuration)' != 'NugetPackage'" />
</Project>
