<Project>
	<PropertyGroup Condition="'$(TeCLI_InvokerLibrary)' == ''">
		<TeCLI_InvokerLibrary>TeCLI.Extensions.SimpleInjector</TeCLI_InvokerLibrary>
	</PropertyGroup>

	<ItemGroup>
		<CompilerVisibleProperty Include="TeCLI_InvokerLibrary" />
	</ItemGroup>

	<!-- SimpleInjector package references by target framework -->
	<ItemGroup Condition="'$(TargetFramework)' == 'net9.0' Or '$(TargetFramework)' == 'net10.0'">
		<PackageReference Include="SimpleInjector" Version="5.4.6" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
		<PackageReference Include="SimpleInjector" Version="5.4.6" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net7.0'">
		<PackageReference Include="SimpleInjector" Version="5.4.6" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
		<PackageReference Include="SimpleInjector" Version="5.4.6" />
	</ItemGroup>
</Project>
